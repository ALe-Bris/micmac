MMv2Dir=..
CXX=g++
INCLUDEDIRS = -I. -I${MMv2Dir}/include/
DOCDIR = doc/
CXXFlags= -std=c++17 -fopenmp -fPIC -Wall -Werror -O2 -march=native ${INCLUDEDIRS} -DFORSWIG
CXX_WRAP_FLAGS = ${CXXFlags} `pkg-config --cflags python3` ${INCLUDEDIRS}
BOOST_LIBS= -lboost_system -lboost_serialization -lboost_regex -lboost_filesystem

SO = _mmv2.so

ifeq ($(USEQT), ON)
    QTLINK= -lGL -lGLU  -lQt5Core -lQt5Gui -lQt5Widgets -lQt5Concurrent -lQt5OpenGL -lQt5Xml
endif

I_SRCS = $(wildcard *.i)
PY_FILES = $(I_SRCS:.i=.py)
WRAP_CXX_FILES = $(I_SRCS:.i=_wrap.cxx)
WRAP_O_FILES = $(I_SRCS:.i=_wrap.o)

.PHONY: clean doc swig

.SECONDARY: $(WRAP_CXX_FILES)

apipy: $(WRAP_O_FILES)
	python3 setup.py install --user USEQT=$(USEQT)
	python3 -c "import mmv2"
	echo "All is Ok"

all: apipy doc

doc:
	cd $(DOCDIR) && doxygen

clean:
	rm -f $(WRAP_CXX_FILES) $(WRAP_O_FILES) $(PY_FILES) $(SO) *.so *.o
	rm -Rf $(DOCDIR)/html build/
	python3 setup.py clean

%.o: %.cpp
	$(CXX) -c $(CXXFlags) $< -o $@

%_wrap.o: %_wrap.cxx
	$(CXX) -c  $(CXX_WRAP_FLAGS) $< -o $@

%_wrap.cxx: %.i
	swig -python -py3 -DFORSWIG -c++ ${INCLUDEDIRS} $<

